<h1>Cocktail List</h1>

<form class="form-inline">
  <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
  <button class="btn my-2 my-sm-0" type="submit">Search</button>
</form>

<ul class="cards">
  <% @cocktails.each do |cocktail| %>
    <!-- <li class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))"> -->
    <li class="card">
      <img src="https://cdn.liquor.com/wp-content/uploads/2017/10/20141510/Washington-Apple-720x720-recipe.jpg" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <%= link_to "Get recipe", cocktail_path(cocktail), class: "card-link" %>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to "Add cocktail", new_cocktail_path %>
